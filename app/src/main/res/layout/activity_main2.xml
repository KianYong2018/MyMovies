<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rating_pg13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewMovieTitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie Title"
            android:textAppearance="@android:style/TextAppearance.Large"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewYear2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year" />

            <TextView
                android:id="@+id/textViewGenre2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Genre" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/textViewWatchOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Watch on" />

        <TextView
            android:id="@+id/textViewInTheatre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="In Theatre" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>